<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">







    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imgslider"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        app:iss_auto_cycle="true"
        app:iss_period="1000"
        app:iss_delay="1000"

        android:layout_below="@id/tablayout"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Lorem Ipsum The national single window system has access to over 100 central
        level approvals and state single window systems of 14 states/uTs with one user Id and password"
        android:padding="3dp"
        android:textColor="#393131"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_below="@id/imgslider"
        />


    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/recyclerview"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_below="@id/textview">-->

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who we are: IRPOF"
        android:layout_below="@+id/textview"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mission Vision"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Events"
        android:layout_below="@+id/btn2"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Images"
        android:layout_below="@+id/btn3"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Videos"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        />

        <TextView
            android:id="@+id/tv_irpof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"

            />


</LinearLayout>


</ScrollView>