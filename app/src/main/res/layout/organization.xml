<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="4"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Constitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constitution"
            android:layout_weight="2"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Executive_Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Executive Body"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="4"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Constituent_Units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constituent Units"
            android:layout_weight="2"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Incumbency_Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incumbency Board"
            android:layout_weight="2"
            />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_Organization"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>