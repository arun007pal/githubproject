            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/img_3" />
    </LinearLayout>



        <TextView
            android:id="@+id/board_meeting_tv2"
